# Força HTTPS + www
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Redireciona para HTTPS com www
  RewriteCond %{HTTPS} off [OR]
  RewriteCond %{HTTP_HOST} !^www\. [NC]
  RewriteRule ^ https://www.%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

  # Remove barra final (trailing slash)
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.+)/$ /$1 [R=301,L]

  # Não processa arquivos e diretórios existentes
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Se a URL começar com /api ou /admin ou outras rotas Laravel, envia para index.php
  RewriteCond %{REQUEST_URI} ^/(api|admin|login|logout|sanctum|broadcasting) [NC]
  RewriteRule ^ index.php [L]

  # Senão, trata como rota SPA (Vue): carrega index.html
  RewriteRule ^ index.html [L]
</IfModule>

# Compressão GZIP
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
  AddOutputFilterByType DEFLATE application/javascript application/x-javascript application/json
  AddOutputFilterByType DEFLATE image/svg+xml
  AddOutputFilterByType DEFLATE font/woff2 font/woff
  Header append Vary User-Agent env=!dont-vary
</IfModule>

# Cache inteligente
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"

  # Imagens
  ExpiresByType image/webp "access plus 6 months"
  ExpiresByType image/jpeg "access plus 6 months"
  ExpiresByType image/png "access plus 6 months"
  ExpiresByType image/gif "access plus 6 months"
  ExpiresByType image/svg+xml "access plus 6 months"

  # Fontes
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"

  # Estilos e scripts
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
</IfModule>

# Headers HTTP para segurança e cache
<IfModule mod_headers.c>
  <FilesMatch "\.(html)$">
    Header set Cache-Control "public, max-age=600"
  </FilesMatch>

  <FilesMatch "\.(js|css|png|jpg|jpeg|gif|webp|svg|woff2?|woff)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  <FilesMatch "\.(woff2|woff)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>

  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"

  Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self';"
</IfModule>

# Preload de fontes
<IfModule mod_headers.c>
  <FilesMatch "\.(woff2|woff|ttf|otf|eot)$">
    Header set Link "<%{REQUEST_URI}e>; rel=preload; as=font; crossorigin"
    SetEnvIf Request_URI "\.(woff2|woff|ttf|otf|eot)$" REQUEST_URI=$0
  </FilesMatch>
</IfModule>

# Desabilita ETag
FileETag None
Header unset ETag

# Charset padrão
AddDefaultCharset UTF-8

# Tipos MIME
AddType application/javascript .mjs
AddType application/json .json

# Bloqueio de métodos HTTP perigosos
<LimitExcept GET POST HEAD OPTIONS>
  Deny from all
</LimitExcept>

# Anti-hotlink
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https://(www\.)?sushitan\.com [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F]

# Proteção de arquivos sensíveis
<FilesMatch "\.(htaccess|htpasswd|env|ini|log|sh|bak|psd)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Desabilita listagem de diretórios
Options -Indexes
